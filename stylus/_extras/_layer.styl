/*
 * Configure z-index as single class objects 
 */

//Layer on level 0
Layer($level)
    if $level > 100 
        z-index 100
    else if $level < 0 
        z-index 0
    else 
        z-index $level

for $lvl in 0..10
    z = $lvl*10
    .Layer-{z}
        z-index (z)

