$mymenuname = ITEM-menuHorizontal

menuHorizontal-functions-a-item()
    overflow hidden
    margin-top 52px
    margin-right 23px
    text-transform uppercase
    color #fff
    font-weight bold
    padding-bottom 2px
    &:hover
        border-bottom 3px solid #8c6922


.FUNCTION-menuHorizontal
    MENU-horizontal($mymenuname)
    height 72px
    a.{$mymenuname}
        menuHorizontal-functions-a-item()
        &:hover
            border-bottom 3px solid #8c6922

    a.{$mymenuname}-selected
        menuHorizontal-functions-a-item()
        margin-top 47px
        background-color #f1b93e
        color #fff
        padding-top 5px
        padding-bottom 8px
        padding-left 5px
        padding-right 5px
        &:hover
            border-bottom 0

    a.{$mymenuname}-first
        menuHorizontal-functions-a-item()
        margin-left 170px

$mymenuname = ITEM-menuDropdown

.FUNCTION-menuDropdown
    AlignMyKidsLeft()
    MENU-vertical($mymenuname)
    background-color #4e4d4e
    a.{$mymenuname}
        padding 5px
        color #ccc
        width auto
        &:hover
            background #fff