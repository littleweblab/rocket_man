.STYLE-input
    BUTTON()
    background-image url(../images/ui/form/ui_bg_styleinput.png)
    background-position 0 0
    background-repeat repeat-x
    width 55px
    height 40px
    text-align center

.STYLE-helperfileDropable
    background-image url("../images/ui/form/ui_bg_conatiner_dropzone.png")  
    background-repeat no-repeat
    background-position 50% 45%
    padding-top 0
    padding-left 0
    padding-right 0
    padding-bottom 0
    margin-top 0
    margin-left 0
    border 2px dashed #d0d3d5 
    GiveMeRoundCorners( 10 )
    
.STYLE-form-search-cancel
    STICKER()
    top 1px
    left 3px
    cursor pointer

.STYLE-form-item-margin-right
    margin-right 6px

.STYLE-form-item-file
    background-image none
    padding-top 0