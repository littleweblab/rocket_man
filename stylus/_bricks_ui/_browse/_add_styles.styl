    // DARK
    
    .STYLE-itemBrowseBorder-dark
        border-bottom 1px solid #444

    .STYLE-itemBrowseText-dark
        UI()
        color #757575
        font-size 11px
        line-height 14px
        color #8c8b8d

    .STYLE-itemBrowseBigLetter-dark
        font-size 18px
        text-transform uppercase
        padding-top 8px
        min-height 24px
        color #424242

    .STYLE-icon-mini-dark
        background-image url('../images/ui/browse/ui_bg_icon_arrowsdark_mini.png')

    // FILE

    .STYLE-itemBrowseBorder-files
            border-bottom 1px dotted #e0e0e0

    .STYLE-icon-mini-files
        background-image url('../images/ui/browse/ui_bg_style_itembrowsefiles.png')
        background-repeat no-repeat
        background-position 6px 0px
        color #444444
        padding-top 13px
        padding-left 12px
        font-size 8px
        line-height 10px
        font-weight bold

