// LIGHT  

.STYLE-given
    background-color #fff
    background-image url('../images/ui/panel/ui_bg_conatiner_panel.png')
    background-repeat repeat-y
    background-position 0 0
    width 100% 
    
.FUNCTION-browse li, .FUNCTION-browse 

    .STYLE-itemBrowseBorder
        border-bottom 1px solid #e0e0e0
    
    .STYLE-itemBrowseBorderDotted
        border-bottom 1px dotted #e0e0e0
    
    .STYLE-itemBrowseTopDotted
        border-top 1px dotted #e0e0e0
        
    .STYLE-itemBrowseRightDotted
        border-right 1px dotted #e0e0e0

    .STYLE-itemBrowseText, li.STYLE-itemBrowseText
        UI()
        color #757575
        font-size 11px
        line-height 14px

    .STYLE-itemBrowseBigLetter, li.STYLE-itemBrowseBigLetter
        ItemBrowseBigLetter-STYLE()
    
    .STYLE-NoPadding, li.STYLE-NoPadding
        padding-left 0 
        padding-right 0
        padding-top 0
        padding-bottom 0
        
    .STYLE-NoPaddingLeftRight, li.STYLE-NoPaddingLeftRight
        padding-left 0 
        padding-right 0
        
    .STYLE-NoPaddingBottom, li.STYLE-NoPaddingBottom
        padding-bottom 0 
        
    .STYLE-NoPaddingTop, li.STYLE-NoPaddingTop
        padding-top 0


