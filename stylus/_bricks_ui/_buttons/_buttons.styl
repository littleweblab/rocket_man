@import "_add_sticker"

BUTTON-flat() 
    BUTTON()
    GiveMeRoundCorners(6px)
    padding-top 3px
    padding-left 8px
    padding-right 8px
    padding-bottom 5px
    text-align center
    border 3px solid #d9d9d9
    color #8f8e8f
    font-size 11px
    font-weight bold

.BUTTON-addMaxi
    UI()
    TakeMyKidsWidth()
    BUTTON()
    height 36px
    font-size 14px
    font-weight bold
    color #fff
    padding-top 9px
    padding-right 50px
    padding-left 20px
    background-image url('../images/ui/buttons/ui_bg_button_maxi_add.png')
    background-repeat no-repeat
    background-position 100% 0
    overflow hidden

.BUTTON-addFlatMaxi
    BUTTON()
    UI()
    TakeMyKidsWidth()
    height 24px
    font-size 12px
    font-style italic
    color #757575
    padding-top 14px
    padding-right 38px
    padding-left 20px
    margin-right 8px
    margin-bottom 10px
    background-image url('../images/ui/buttons/ui_bg_button_flat_add.png')
    background-repeat no-repeat
    background-position 100% 100%

.BUTTON-addFlatMaxi-option
    UI()
    TakeMyKidsWidth()
    BUTTON()
    Layer(100)
    height 26px
    font-size 14px
    color: #707070
    padding-top: 10px
    padding-right: 38px
    padding-left: 20px
    margin-right: 8px
    margin-bottom: 10px
    background-image: url('../images/ui/buttons/ui_bg_button_flat_add_option.png')
    background-repeat: no-repeat
    background-position: 100% 100%

BUTTON-ok()
    BUTTON()
    UI()
    TakeMyKidsWidth()
    GiveMeRoundCorners(6px)
    GiveMeShadow( #414141, 1px, 1px, 8px)
    height 20px
    font-size 14px
    font-weight bold
    color #fff
    padding-top 5px
    padding-right 24px
    padding-left 24px
    text-align center
    background-color #799fc6
    background-image url('../images/ui/buttons/ui_bg_button_ok.png')
    background-repeat repeat-x
    background-position 0 0

.BUTTON-ok
    BUTTON-ok()

.BUTTON-AddAsText
    BUTTON()
    font-size 12px
    padding-left 20px
    font-style italic
    color #788fb0
    &:hover
        text-decoration underline
    
.BUTTON-write
    BUTTON()
    UI()
    STICKER()
    top 50%
    left 50%
    margin-top -35px
    margin-left -35px
    height 70px
    width 70px
    font-size 12px
    font-style italic
    color #757575
    background-image url('../images/ui/buttons/ui_bg_button_write.png')
    background-repeat no-repeat
    background-position 0 0
    
    
.BUTTON-flat-black 
    //BUTTON()
    UI()
    GiveMeRoundCorners(7px)
    padding-top 7px
    padding-left 12px
    padding-right 12px
    padding-bottom 7px
    text-align center
    background-color #3d3d3e
    color #598bca
    font-size 14px
    font-weight bold

  
  
    