clipboard-function-a-item()
    width 45px
    height 59px
    padding-left 16px
    padding-top 10px
    padding-right 16px
    margin-right -13px
    background-image url('../images/ui/clipboard/ui_bg_clipboard_item.png')
    background-repeat no-repeat
    background-position 0 0
    cursor pointer

$mymenuname = ITEM-clipboard

.FUNCTION-clipboard
    MENU-horizontal($mymenuname)
    TakeMyKidsWidth()
    
    a.{$mymenuname} 
        clipboard-function-a-item()
        
    a.ITEM-copy
        clipboard-function-a-item()
        background-image url('../images/ui/clipboard/ui_bg_clipboard_item_copy.png')
        cursor default
        
    a.ITEM-trash
        margin-left 22px
        width 101px
        height 59px
        background-image url('../images/ui/clipboard/ui_bg_item_trash.png')
        background-repeat no-repeat
        background-position 0 0
        cursor default
        text-indent: -20000

$mymenuname = ITEM-clip
        
.FUNCTION-clip
    MENU-vertical($mymenuname)
    a.{$mymenuname} 
        height 81px
        width 81px
        background-image url('../images/ui/clipboard/ui_bg_item_clip.png')
        background-repeat no-repeat
        background-position 0 0
        margin-left 0

