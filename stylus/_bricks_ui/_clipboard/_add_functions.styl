    background-repeat no-repeat 
    background-position 100% 0
    margin-top 24px
    margin-left 73px
    padding-top 5px
    padding-right 20px
    padding-bottom 21px
    height 11px
    color #5f5d5e
    font-size 11px
    
.FUNCTION-showClipboard
    STICKER()
    background-color red
    height 5px
    width 100%
    bottom 0px

.HELPER-onDrag
    GiveMeRoundCorners(12)
    GiveMeShadow( #2a2a2a, 1px, 1px, 8px )
    width: 86
    height: 66
    
.HELPER-onCopyDrag
    //STICKER()
    GiveMeOpacity(0)
    GiveMeRoundCorners(12)
    
